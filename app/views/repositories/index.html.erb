<div class = "container">
  <h1>Repos</h1>
  <!-- List repositories and display username here! -->
  <br></br>
  <ol>
    <%@repo_data.each do |r| %>
      <li><%= link_to r["name"], "https://www.github.com/#{@user_data["login"]}/#{r["name"]}" %></li>
    <% end %>
  </ol>
  <br></br>
  <%= @user_data["login"] %>
  <br></br>
  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>
</div>
