<div class = "container">

  <h1><%= @repos[0]['owner']['login'] %></h1>

  <h1>Repos</h1>
  <% if @repos %>
    <% @repos.each do |repo| %>
      <ul>
        <li><%= repo['name'] %></li>
      </ul> 
    <% end %>
  <% end %>

  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>

</div>
