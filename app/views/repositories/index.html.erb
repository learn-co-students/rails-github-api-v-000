<div class = "container">
  <h1>Repos</h1>
  <h2><%= @username %></h2>
  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>

  <% @repos_data_array.each do |repo| %>
    <%= repo["name"] %><br>
  <% end %>
</div>