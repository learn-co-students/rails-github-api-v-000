<div class = "container">
  <h1>Repos</h1>

  <h2>Welcome, <%= session[:username] %></h2>
  <% @repositories.each do |repository| %>
    <li>
      <%= repository["name"] %>
    </li>
  <% end %>


  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>
</div>
