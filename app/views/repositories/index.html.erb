<div class = "container">
  <h1>Hi <%= @user_name %>!</h1>

  <h2>Your Repos</h2>
  <br>
  <% @repos.each do |item| %>
    <p><strong><%= item["name"] %></strong></p>
  <% end %>
  <br>
  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>
</div>
