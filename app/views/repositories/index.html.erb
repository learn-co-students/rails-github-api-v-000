<div class = "container">
  <h1>Repos</h1>

  <h1><%= session[:username] %>'s Repos</h1>
  <ul>
    <% @repos.each do |repo| %>
    <li><%= repo["name"] %></li>
    <% end %>
   </ul>

  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, true, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>
</div>

<%= @repos %>
