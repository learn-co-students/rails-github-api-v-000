<div class = "container">
  <% if session[:username] %>
    <h1><%= session[:username] %></h1>
  <% end %>

  <h1>Repos</h1>
  <!-- List repositories here! -->
  <ul style="list-style: none;">
  <% @repos.each do |repo|%>
    <li><%= repo["name"]%> : <%= link_to repo['html_url'], repo['html_url'] %></li>

  <% end %>
</ul>

  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>
</div>