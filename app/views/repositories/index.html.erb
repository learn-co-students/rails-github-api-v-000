
<div class = "container">
  <h1>Repos</h1>
  <!-- List repositories and display username here! -->
  <h3><%= @user_info["login"] %></h3>

  <% @repo_info.each do |r| %>
    <p>
       <%= link_to r["name"], "https://www.github.com/#{@user_info["login"]}/#{r["name"]}" %>
    </p>
  <% end %>

  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>
</div>
