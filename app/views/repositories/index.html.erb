<div class = "container">
  <h1>Hello, <%=session[:username]%>!</h1>

  <h1>Repos</h1>
  <%@repos.each do |repo|%>
  <p><strong><a href="<%=repo["html_url"]%>"><%=repo["name"]%></a></strong></p>
  <%end%>


  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>

  <!-- <h1>Session token</h1>
  <%= session[:token] %> -->

<!-- <h1>JSON results</h1>
  <%= @repos %> -->
</div>
