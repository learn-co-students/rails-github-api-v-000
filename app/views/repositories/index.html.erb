<div class = "container">
  <h1>Repos</h1>
  <!-- List repositories here! -->
  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>
</div>
<ul>
    <% @repos.each do |repo| %>
      <li>
        your_username <%= session[:current_user] %><br>
        <%= repo["name"] %><br>
        <%= link_to repo["html_url"], repo["html_url"]  %><br>
      </li>
    <% end %>
  </ul>
