<div class = "container">
  <h4>Hello, <%= session[:username] %></h4>
  <h1>Repos</h1>
  <!-- List repositories here! -->

  <% if @repos %>
    <% @repos.each do |repo| %>
      <strong>Name: </strong><%= repo['name'].to_s %><br>
    <% end %>
  <% end %>

  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>
</div>