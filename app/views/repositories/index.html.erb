<div class = "container">
  <h1>Repos</h1>
  <!-- List repositories here! -->
	<h2>Welcome, <%=@user%> </h2>
  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>
  <br>

  <div class="container">
  	<%@repos.each do |repo|%>
  		<div>
  			<h3>Name: <%= repo[:name]%></h3>
  			<h3>URL: <%= repo[:url]%></h3>
  		</div>
  		<hr>
  	<%end%>
  </div>
</div>