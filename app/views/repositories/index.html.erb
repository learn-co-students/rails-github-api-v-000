<div class = "container">
  <h1><%= @username %>Repos</h1><br>

  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %><br>

  <div id="repositories">
    <ul>
    <% @repos.each do |r| %>
      <li><%= r["name"] %></li>
    <% end %>
    </ul>
  </div>
</div>
