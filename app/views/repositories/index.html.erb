<div class = "container">
  <h1>Repos</h1>
  <h2><%= @user['login'] %></h2>
  <ul>
    <% if @repos %>
      <% @repos.each do |repo| %>
      <li>
        <%= repo['name'] %>
      </li>
      <% end %>
    <% end %>
  </ul>
  <!-- List repositories here! -->

  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>
</div>