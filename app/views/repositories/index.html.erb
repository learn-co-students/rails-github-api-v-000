<div class = "container">
  <h1>Repos</h1>
  <ul>
  <% @repos.each do |repo| %>
    <li><%= link_to repo["name"], repo["html_url"] %> <%= repo["owner"]["login"]%></li>
  <% end %>
  </ul>

  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>
</div>