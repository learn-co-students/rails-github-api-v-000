<div class = "container">
  <h1>Repos</h1>
  <!-- List repositories here! -->
  <h3> <%= session[:username]  %></h3>
  <h3> your_username </h3>
  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>
</div>

<div>
  <% if @error %>
    <p><%= @error %></p>
  <% elsif @repos_array %>
    <ul>
    <% @repos_array.each do |repo| %>
      <li>
        <%= repo["name"] %><br>
      </li>
      <% end %>
      </ul>
    <% end %>
  </div>
