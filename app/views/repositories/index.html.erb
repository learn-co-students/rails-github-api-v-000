<div class = "container">
  <h1>Repos</h1>
  <h2><%= @username %></h2>

  <ul>
    <% @repo_names.each do |repo_name|%>
      <li><%=repo_name%></li>
    <% end %>
  </ul>

  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>
</div>
