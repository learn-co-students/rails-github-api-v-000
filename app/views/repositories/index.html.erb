<div class = "container">

  <h1>Hello, <%= @username %></h1>

  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>

  <h3>Repos</h3>
  <% @repos.each do |repo| %>
    <ul class="repos">
      <li><%= repo["name"] %></li>
    </ul>
  <% end %>
  
</div>