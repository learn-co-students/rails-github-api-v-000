<div class = "container">
  <h1><%= session[:username] %>'s Repositories</h1>
  <% @repos.each do |repo| %>
    <li><%= repo["name"] %></li>
  <% end %><br></br>

  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>
</div>
