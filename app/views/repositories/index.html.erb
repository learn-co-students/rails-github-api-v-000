<div class = "container">

  <h1>Repos</h1>

  <% @repo_data.each do |r| %>
  <%= link_to r["name"], "https://www.github.com/#{@user_data["login"]}/#{r["name"]}" %></br>
  <% end %>

   Username: <%= @user_data["login"] %>
   Repositories Per Page:<%= @repo_data.count %>

  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>

  <p><%= @repo_data %></p>

</div>
