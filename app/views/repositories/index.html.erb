<div class = "container">
  <h1><%= @user["name"] %></h1>
  <h1><%= @user["login"] %></h1>
  <% @repos.each do |repo| %>
  <ul>
    <li><%= repo["name"] %></li>
  </ul>
  <% end %>

  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>
</div>
