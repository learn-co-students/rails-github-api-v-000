<div class = "container">
  <h1>Repos</h1>
  <!-- List repositories and display username here! -->
  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>

  <% @repos.each do |repo| %>
    <a href="<%= repo['html_url']%>" target="_blank"><h3><%= repo['full_name'] %></h3></a>
  <% end %>
  <% if @page.to_i >= 1 %>
    <%= link_to "Prev Page", root_path(page: @page.to_i - 1) %>
  <% end %>
  <% if @repos.length >= 29 %>
  <%= link_to "Next Page", root_path(page: @page.to_i + 1)  %>
  <% end %>
</div>
<%= session[:token] %>