<div class = "container">
  <h1>Repos</h1>
  <!-- List repositories and display username here! -->
  <h3>User: <%= @user_data %></h3>
  <h3><%= @user_data %>'s Repos:</h3>
  <% @repo_data.each do |r| %>
  	<%= link_to r["name"], "https://www.github.com/#{@user_data["login"]}/#{r["name"]}" %>â€¨  
  <% end %>

  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>
</div>
