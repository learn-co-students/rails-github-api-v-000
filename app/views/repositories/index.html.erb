<div class = "container">
  <h1>Repos for <%= session[:username] %></h1>
  <!-- List repositories here! -->
  <% i = 1 %>
  <% @repos.each do |repo| %>
	<%= raw("<li>Repo #{i.to_s}: #{link_to repo["name"], repo["html_url"]}</li>") %>
	<% i += 1 %>
  <% end %>

  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>
</div>