<div class = "container">
  <h1>Repos</h1>
  <!-- List repositories and display username here! -->

  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>
</div>

<p>User: <%= @user["login"] %></p>
<p>Repositories:</p>
<% if @user_repos %>
  <ul>
    <% @user_repos.each do |repo| %>
      <div>
        <li><%= repo['name'] %></li>
      </div>
    <% end %>
  </ul>
<% end %>
