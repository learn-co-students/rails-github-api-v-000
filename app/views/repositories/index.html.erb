<div class = "container">
  <h1>Repos</h1>

  <% @repo_data.each do |repo| %>
  <p>
    <%= link_to repo["name"], "https://www.github.com/#{@user_data["login"]}/#{repo["name"]}" %>
  </p>
  <% end %>

  <h3>Username: <%= @user_data["login"] %></h3>

  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>
</div>
