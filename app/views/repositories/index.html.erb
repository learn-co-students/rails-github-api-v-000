<div class = "container">
  <h1>Repos</h1>
  <!-- List repositories and display username here! -->

<!-- Take in data -->
  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>

<!-- show name and repos  -->
  <% @repos.each do |repo| %>
  <%= <link_to repo["name"], "https://github.com/#{@user["login"]}/#{repo["name"]}" %>

  <%= @user["login"] %>
</div>
