<div class = "container">
  <h1>Repos</h1>
  <% if @repos %>
    <%= @user["login"] %>
    <div>
      <ul>
        <% @repos.each do |r| %>
          <li><%= r["name"] %></li><br>
        <%end%>
      </ul>
    </div>
  <% end %>
  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>
</div>
