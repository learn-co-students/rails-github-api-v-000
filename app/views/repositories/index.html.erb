<div class = "container">
  <h1>Repos</h1>
  <!-- List repositories and display username here! -->
<div>
  <h1><%= @user_data["login"] %></h1><br />
  <%= @repo_data.each do |repo| %>
  <%= link_to repo["name"], "https://www.github.com/#{@user_data["login"]}/#{repo["name"]}" %><br>
    <% end %>
</div>

  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>
</div>
