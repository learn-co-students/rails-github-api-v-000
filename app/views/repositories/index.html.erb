<div class = "container">
  <h1><%= @username %></h1>
  <h2>Repos</h2>

  <% if @repos %>
    <h2></h2>
    <ul>
      <% @repos.each do |repo| %>
        <li>
          <%= repo["name"] %>
        </li>
      <% end %>
    </ul>

  <% end %>

  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>
</div>
