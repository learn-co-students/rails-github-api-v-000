<div class = "container">
  <h1>Hello, <%= session[:username] %></h1>
  
  <h1>Repos</h1>
      <div>
        <% if @repos%>
          <ul>
          <% @repos.each do |repo| %>
            <li><%= repo %></li>
          <% end %>
          </ul>
        <% end %>
      </div>

  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>
</div>