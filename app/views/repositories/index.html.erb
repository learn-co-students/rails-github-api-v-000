<div class = "container">
  <h1>Repos</h1>
  <!-- List repositories and display username here! -->

  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>

  <h3>Current user: <%= @user %></h3>
  <h3>Repositories</h3>
  <ul>
    <% @repo_body.each do |repo| %>
    <li>
      <%= repo["name"] %> <br>
      <%= repo["html_url"] %> <br>
    </li>
    <% end %>
  </ul>
</div>
