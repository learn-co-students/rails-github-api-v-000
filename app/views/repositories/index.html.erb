<div class = "container">
  <h1><%=session[:username]%></h1>
  <h1>Repos</h1>
  <ul>
    <% @repos.each do |rep| %>
      <li><%=link_to rep["name"], rep["html_url"]%></li>
    <% end %>
  </ul>

  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>
</div>
