<div class = "container">
  <h1>Repos</h1>
  <h3>User:<%= @username %></h3>
  
  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>

  <% if !@repositories.empty? %>
    <ul>
      <% @repositories.each do |repo| %>
        <li><%= repo['name'] %></li>
      <% end %>
    </ul>
    <% else %>
      <p>No repositories</p>
    <% end %>
  
</div>